<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewDatabase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="addToDatabase"
        android:text="@string/text_for_button_add"
        app:layout_constraintEnd_toStartOf="@+id/buttonDeleteLast"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDatabase" />

    <Button
        android:id="@+id/buttonDeleteLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="deleteLastFromDatabase"
        android:text="@string/text_for_button_delete_last"
        app:layout_constraintEnd_toStartOf="@+id/buttonAppendTestToLast"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonAdd"
        app:layout_constraintTop_toTopOf="@+id/buttonAdd" />

    <Button
        android:id="@+id/buttonAppendTestToLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="appendTestToLastOfDatabase"
        android:text="@string/text_for_button_append_test_to_last"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonDeleteLast"
        app:layout_constraintTop_toTopOf="@+id/buttonDeleteLast" />

</androidx.constraintlayout.widget.ConstraintLayout>