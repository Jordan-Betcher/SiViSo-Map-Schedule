<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Add">

    <TextView
        android:id="@+id/titleAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/title_add"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/addMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="379dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleAdd"
        tools:context=".Locations" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/text_for_hint_name"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/spinnerSiViSo"
        app:layout_constraintStart_toStartOf="@+id/addMap"
        app:layout_constraintTop_toBottomOf="@+id/addMap" />

    <Spinner
        android:id="@+id/spinnerSiViSo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:dropDownWidth="match_parent"
        android:entries="@array/siviso"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/buttonConfirmAdd"
        app:layout_constraintEnd_toEndOf="@+id/addMap"
        app:layout_constraintTop_toTopOf="@+id/textViewName" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClickButtonCancel"
        android:text="@string/text_for_button_cancel"
        app:layout_constraintEnd_toStartOf="@+id/buttonConfirmAdd"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textViewName"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <Button
        android:id="@+id/buttonConfirmAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:onClick="onClickButtonConfirmAdd"
        android:text="@string/text_for_button_confirm_add"
        app:layout_constraintEnd_toEndOf="@+id/spinnerSiViSo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonCancel"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

</androidx.constraintlayout.widget.ConstraintLayout>