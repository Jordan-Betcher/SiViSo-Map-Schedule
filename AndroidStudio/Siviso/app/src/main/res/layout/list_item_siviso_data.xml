<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="#1A646464"
    android:padding="0dp"
    tools:context=".activities.activity_siviso.Activity_Siviso">

    <TextView
        android:id="@+id/textViewHoldName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerHoldSiviso"
        app:layout_constraintEnd_toStartOf="@+id/spinnerHoldSiviso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinnerHoldSiviso" />

    <Spinner
        android:id="@+id/spinnerHoldSiviso"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_margin="0dp"
        android:entries="@array/sivisoRingmode"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>